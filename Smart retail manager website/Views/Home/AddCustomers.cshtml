@model Smart_retail_manager_website.Models.Customer
@using Smart_retail_manager_website.Models
@using Smart_retail_manager_website.Controllers

@{
    ViewData["Title"] = "New Order";

    // use the same in-memory products as the controller
    var products = ProductsController.AllProducts;
}

<h2>New Order</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Bills" method="post">
    <h4>Customer Information</h4>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <h4>Products</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < products.Count; i++)
            {
                var p = products[i];
                <tr>
                    <td>
                        <!-- One hidden productIds entry per row -->
                        <input type="hidden" name="productIds" value="@p.ProductID" />
                        <!-- Checkbox list: selectedProducts -->
                        <input type="checkbox" name="selectedProducts" value="@p.ProductID" />
                    </td>
                    <td>@p.Name</td>
                    <td>@p.UnitPrice</td>
                    <td>
                        <!-- Quantities list -->
                        <input type="number" name="quantities"
                               value="1" min="1" max="@p.QuantityInStock"
                               class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Create Bill</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
