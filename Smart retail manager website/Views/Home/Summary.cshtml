@model Smart_retail_manager_website.Views.Home.SummaryModel

<h2>Bill Summary</h2>

<p><strong>Rows from DB:</strong> @Model.Bills.Count</p>

@if (Model.Bills.Count == 0)
{
    <p>No data returned from vw_billSummary.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Bill ID</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model.Bills)
            {
                <tr>
                    <td>@bill.BillID</td>
                    <td>@bill.Cname</td>
                    <td>@bill.DateOfInvoice.ToShortDateString()</td>
                    <td>@bill.LineTotal</td>
                </tr>
            }
        </tbody>
    </table>
}
