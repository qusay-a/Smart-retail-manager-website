@model List<Smart_retail_manager_website.Models.Bill>
@{
    ViewData["Title"] = "Summary";
    Layout = "_Layout";
}

<h2>All Bills Summary</h2>

<a class="btn btn-primary mb-3" asp-controller="Home" asp-action="AddCustomers">Add New Customer</a>

@if (Model.Count == 0)
{
    <p>No customers added yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Bill ID</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Total</th>
                <th>Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.BillID</td>
                    <td>@bill.Customer.Name</td>
                    <td>@bill.Date.ToShortDateString()</td>
                    <td>@bill.CalculateTotal().ToString("C")</td>
                    <td>@bill.GetTotalItems()</td>
                </tr>
            }
        </tbody>
    </table>
}
