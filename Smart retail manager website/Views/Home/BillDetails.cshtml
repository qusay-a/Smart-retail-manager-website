@model Smart_retail_manager_website.Models.BillDetailsDTO
@using System.Linq

@{
    ViewData["Title"] = "Bill Details";
    var subtotal = Model.Items.Sum(i => i.UnitPrice);
}

<h2>Bill Details</h2>

<div>
    <p><strong>Bill ID:</strong> @Model.BillID</p>
    <p><strong>Customer:</strong> @Model.CustomerName</p>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.UnitPrice</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <p><strong>Subtotal:</strong> @subtotal</p>
</div>
